@model DemoWE.Models.Project

<form id="createForm" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProjectTitle" class="control-label"></label>
        <input asp-for="ProjectTitle" class="form-control" />
        <span asp-validation-for="ProjectTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectDescription" class="control-label"></label>
        <input asp-for="ProjectDescription" class="form-control" />
        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="pfile" class="control-label"></label>
        <input asp-for="pfile" class="form-control" />
        <span asp-validation-for="pfile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <div class="input-group">
            <input asp-for="StartDate" class="form-control" type="date" value="" />
            <div class="input-group-append">
                <label class="input-group-text">
                    <input type="checkbox" id="startImmediately" onclick="handleStartDate()">
                    Start Immediately
                </label>
            </div>
        </div>
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Deadline" class="control-label"></label>
        <input asp-for="Deadline" class="form-control" type="date" value="" />
        <span asp-validation-for="Deadline" class="text-danger" ></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority" class="control-label"></label>
        <select asp-for="Priority" asp-items="Html.GetEnumSelectList<PriorityLevel>()" class="form-control"></select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AssignedDepartmentID" class="control-label"></label>
        <select asp-for="AssignedDepartmentID" asp-items="Html.GetEnumSelectList<DepartmentNames>()" class="form-control"></select>
        <span asp-validation-for="AssignedDepartmentID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<script>
    function handleStartDate() {
        var checkbox = document.getElementById("startImmediately");
        var dateInput = document.getElementById("StartDate");

        if (checkbox.checked) {
            // Get the current system date in ISO 8601 format (year-month-day)
            var currentDate = new Date().toISOString().slice(0, 10);

            // Set the date input value to the current date
            dateInput.value = currentDate;
        } else {
            // Clear the date input value if unchecked
            dateInput.value = "";
        }
    }
</script>