<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DemoWE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoWE.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <!-- Add a button to open the sidebar -->
    <button class="openbtn" onclick="openSidebar()">&#9776;</button>

    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeSidebar()">&times;</a>
        <!-- Centered logo -->
        <div class="text-center logo-container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://i.ibb.co/1Mr4GfG/Group.png" alt="Logo" style="max-height: 50px;">
            </a>
            <div class="logo-text">WorkEvo</div>
            <div class="logo-subtext">Task management system</div>
            <br />
            <div class="horizontal-divider"></div>

        </div>
        <!-- Navigation links -->
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Employee">
                    <span class="hover-box">Home</span>
                </a>
            </li>
            <br />
            <div class="horizontal-divider"></div>
            <br />
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Projects" asp-action="Index">
                    <span class="hover-box">Projects</span>
                </a>
            </li>

            <br />
            <div class="horizontal-divider"></div>
            <br />

            <li class="nav-item">
                <a class="nav-link text-dark text-center" asp-area="" asp-controller="STasks" asp-action="Index">
                    <span class="hover-box">Tasks</span>
                </a>
            </li>

            <br />
            <div class="horizontal-divider"></div>
            <br />

            <li class="nav-item">
                <a class="nav-link text-dark text-center" asp-area="" asp-controller="Requests" asp-action="Index">
                    <span class="hover-box">Requests</span>
                </a>
            </li>
        </ul>
        <!-- User box at the bottom -->
        <div class="user-box">
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="User Logo" class="user-logo">
            <div class="user-info">
                <span class="user-name">@ViewBag.name <i class="bi bi-pencil"></i> </span>
                <span class="user-email">@ViewBag.email</span>
            </div>
            <div class="vertical-divider"></div>
            <a class="logout-btn" asp-area="" asp-controller="Users" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i> <!-- Bootstrap logout icon -->
            </a>
        </div>
    </div>

    <!-- Main content -->
    <div id="main">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function openSidebar() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            document.getElementById("main").classList.add("sidebar-open"); // Add class to the main content
        }

        function closeSidebar() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.getElementById("main").classList.remove("sidebar-open"); // Remove class from the main content
        }
    </script>

    <style>
        body {
            background-color: #DDDDDD;
        }
        /* The sidebar */
        .sidebar {
            height: 100%; /* Full-height */
            width: 0; /* Zero width - change this with JavaScript */
            position: fixed; /* Stay in place */
            z-index: 1; /* Stay on top */
            top: 0;
            left: 0;
            background-color: white; /* Gray */
            overflow-x: hidden; /* Disable horizontal scroll */
            transition: 0.5s; /* 0.5 second transition effect to slide in the sidebar */
            padding-top: 20px; /* Place content 20px from the top */
            display: flex;
            flex-direction: column;
            box-shadow: 0px 0px 10px 5px rgba(0, 0, 0, 0.3); /* Shadow on the right side */
        }

            /* The sidebar links */
            .sidebar a {
                padding: 8px;
                text-decoration: none;
                font-size: 18px;
                color: #818181;
                display: block;
                transition: 0.3s;
                text-align: center; /* Center the text */
            }

                /* When you mouse over the navigation links, change their color */
                .sidebar a:hover {
                    color: #f1f1f1;
                }

            /* Position and style the close button (top right corner) */
            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        /* Style for the button that opens the sidebar */
        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #111;
            color: white;
            padding: 10px 15px;
            border: none;
        }

            .openbtn:hover {
                background-color: #444;
            }

        /* Style the main content */
        #main {
            transition: margin-left .5s; /* If you want a transition effect */
            padding: 20px;
        }

        /* Center the logo */
        .text-center {
            text-align: center;
        }

        /* Style for the logo container */
        .logo-container {
            padding: 20px 0;
        }

        .logo-text {
            font-size: 25px;
            font-weight: bold;
        }

        .logo-subtext {
            font-size: 18px;
            color: #666;
        }

        /* Ensure the user box is at the bottom */
        .navbar-nav {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .user-box {
            display: flex;
            align-items: center;
            padding: 10px;
            margin-top: auto;
            background-color: white;
        }

        .user-logo {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .user-info {
            flex-grow: 1;
        }

        .user-name {
            display: block;
            font-weight: bold;
        }

        .user-email {
            display: block;
            font-size: 12px;
            color: #666;
        }

        .vertical-divider {
            width: 1px;
            height: 40px;
            background-color: #ccc;
            margin: 0 10px;
        }

        .horizontal-divider {
            height: 1px;
            width: 100%;
            background-color: #ccc; /* Color of the divider */
            margin: 2px ; /* Adjust the margin as needed */
        }

        .logout-btn {
            color: #818181;
            font-size: 20px;
            text-decoration: none;
            padding: 10px;
            transition: background-color 0.3s;
        }

            .logout-btn:hover {
                background-color: red;
                color: #f1f1f1;
            }

        .hover-box {
            position: relative;
            color: #000; /* Default text color */
            transition: color 0.3s; /* Smooth transition for text color change */
        }

            .hover-box:hover {
                color: #ccc; /* Text color on hover */
            }

                .hover-box:hover::before {
                    content: "";
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    width: 200px; /* Adjust the width of the box */
                    height: 45px; /* Adjust the height of the box */
                    background-color: #9152f8; /* Color of the box */
                    border-radius: 15px; /* Make it round */
                    z-index: -1; /* Ensure it's behind the text */
                    transition: background-color 0.3s, border-radius 0.3s; /* Smooth transition for background color and border radius */
                }

            
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
