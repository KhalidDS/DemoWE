@model DemoWE.Models.STask

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<style>
    * {
        margin: 0;
        padding: 0;
        outline: 0;
        box-sizing: border-box;
    }

    .container-fluid {
        position: relative;
        z-index: 2;
    }

    .row {
        margin: 0;
        padding: 0;
    }

    .card {
        box-shadow: 0 2px 15px rgba(64, 64, 64, .7);
        border-radius: 15px;
        background: white;
        padding: 20px;
        font-family: 'Montserrat', sans-serif;
        color: #ffffff;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        margin-bottom: 20px;
        text-align: center;
    }

    .card-title {
        font-family: 'Open Sans', sans-serif;
        font-weight: 700;
        font-size: 24px;
        color: purple; /* Highlight color */
        margin-bottom: 10px;
    }

    .card-description {
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
        font-size: 18px;
        color: black;
    }

    dt {
        font-family: 'Open Sans', sans-serif;
        font-weight: 600;
        color: purple; /* Highlight color */
        text-transform: uppercase;
    }

    dd {
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
        color: black;
        margin-left: 0;
        margin-bottom: 15px;
    }

    dl {
        margin-bottom: 0;
    }

    .col-sm-6 dl {
        margin-bottom: 15px;
    }

    .col-md-6 {
        padding: 0;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-14">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="flex-grow-1">
                        <div class="col-sm-12">
                            <dl>
                                <dt>Task Title</dt>
                                <dd>@Html.DisplayFor(model => model.TaskTitle)</dd>
                            </dl>
                        </div>

                        <div class="col-sm-12">
                            <dl>
                                <dt>Task Description: </dt>
                                <dd>@Html.DisplayFor(model => model.TaskDescription)</dd>
                            </dl>
                        </div>
                        
                    </div>
                </div>
                <div class="row">
                   
                    <div class="col-sm-6">
                        <dl>
                               
                            <dt>Created by: </dt>
                                @foreach (var t in ViewBag.At)
                                {
                                    if (t.EmployeeNumber == Model.CreatedBy)
                                    {
                                        <dd>@t.FirstName</dd>
                                    }
                                }
                            
                        </dl>
                    </div>

                    <div class="col-sm-6">
                        <dl>
                            <dt>Assaigned To: </dt>
                            @foreach (var t in ViewBag.At)
                            {
                                if (t.EmployeeNumber == Model.AssignedTo)
                                {
                                    <dd>@t.FirstName</dd>
                                }
                            }
                        </dl>
                    </div>
                    </div>
                <div class="row">
                <div class="col-sm-6">
                        <dl>
                            <dt>Priority: </dt>
                            <dd>@Html.DisplayFor(model => model.Priority)</dd>
                        </dl>
                    </div>
                
                
                    <div class="col-sm-6">
                        <dl>
                            <dt>Status: </dt>
                            <dd>@Html.DisplayFor(model => model.Status)</dd>
                        </dl>
                      
                    </div>
                    <div class="col-sm-6">
                        <dl>
                            <dt>Start Date: </dt>
                            <dd>@Model.StartDate.ToShortDateString()</dd>
                        </dl>
                    </div>
                    <div class="col-sm-4">
                        <dl>
                            <dt>Deadline: </dt>
                            <dd>@Model.Deadline.ToShortDateString()</dd>
                        </dl>


                    </div>
                </div>
                <div class="button-group">
                @if ((ViewBag.user == Model.CreatedBy) || (ViewBag.user != Model.AssignedTo))
                {
                    
                        <button id="completeButton" data-task-id="@Model.TaskID" class="btn btn-primary">Complete</button>
                        <button id="declineButton" data-task-id="@Model.TaskID" class="btn btn-danger">Decline</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    }
                else if ((Model.Status == Status.Completed))
                {
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    }
                else
                {
                   
                        <button id="confirmButton" data-task-id="@Model.TaskID" class="btn btn-success">Confirm</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a> 
                    
                }
                </div>
                </div>
            </div>
        </div>
       

    </div>


             
 

<div>
    
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle Confirm button click
            $('#confirmButton').on('click', function () {
                var taskId = $(this).data('task-id');
                updateTaskStatus(taskId, 'Confirm');
            });

            // Handle Complete button click
            $('#completeButton').on('click', function () {
                var taskId = $(this).data('task-id');
                updateTaskStatus(taskId, 'Completed');
            });

            // Handle Decline button click
            $('#declineButton').on('click', function () {
                var taskId = $(this).data('task-id');
                updateTaskStatus(taskId, 'Declined');
            });

            // Function to update task status via AJAX
            function updateTaskStatus(taskId, status) {
                $.ajax({
                    url: '/STasks/UpdateStatus/' + taskId,
                    type: 'POST',
                    data: { id: taskId, status: status },
                    success: function (response) {
                        if (response.success) {
                            // Update UI or show success message
                            toastr.success(response.message);
                            // Optionally update the status displayed on the page
                        } else {
                            // Show error message
                            toastr.error("Error: " + response.message);
                        }
                    },
                    error: function () {
                        // Show error message
                        toastr.error("An error occurred while processing the request.");
                    }
                });
            }
        });
    </script>
}
